---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Intro from '../components/portfolio/Intro.astro';
import Education from '../components/portfolio/Education.astro';
import BlogSection from '../components/portfolio/BlogSection';
import Connect from '../components/portfolio/Connect';
import Projects from '../components/portfolio/Projects';
import WorkExperience from '../components/portfolio/WorkExperience';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="bg-white tracking-tight antialiased dark:bg-zinc-950">
    <div class="mx-auto max-w-[960px] px-4 py-12">
      <Header />
      <main>
        <Intro />
        <Education />
        <Projects client:visible />
        <WorkExperience client:visible />
        <BlogSection client:visible />
        <Connect client:visible />
      </main>
      <Footer />
    </div>
  </body>
</html>
