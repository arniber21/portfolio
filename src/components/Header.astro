---
import { TextEffect } from './ui/TextEffect';
import { SITE_TITLE } from '../consts';
---

<header class="mb-12">
  <div class="mb-1 flex items-start justify-between">
    <a
      href="/"
      class="text-2xl font-semibold tracking-tight text-zinc-900 no-underline transition-opacity hover:opacity-70 dark:text-zinc-100"
    >
      {SITE_TITLE}
    </a>
    <nav class="flex items-center gap-4 pt-1 text-sm text-zinc-500 dark:text-zinc-400">
      <a href="/blog" class="transition-colors hover:text-zinc-900 dark:hover:text-zinc-100">Blog</a>
    </nav>
  </div>
  <TextEffect
    per="word"
    preset="fade-in-blur"
    as="p"
    className="text-base text-zinc-500 dark:text-zinc-400"
    client:only="react"
  >
    CS & Mathematics Â· Cornell University test
  </TextEffect>
</header>
